.searchContainer {
    padding: 0 20rpx;
}
/* 头部区域样式 */
.header {
    display: flex;
    height: 60rpx;
    line-height: 60rpx;
    padding: 10rpx 0;
}
.searchInput {
    display: flex;
    align-items: center;
    flex: 1;
    border-radius: 30rpx;
    background: rgba(237, 237, 237, 0.3);
    padding-right: 15rpx;
}

.cancel {
    width: 100rpx;
    text-align: center;
}
.searchIcon {
    margin-left: 15rpx;
}
.searchInput input {
    flex: 1;
    margin-left: 20rpx;
    height: 60rpx;
}
.placeholder {
    font-size: 28rpx;
}
.clear {
    width: 60rpx;
    height: 60rpx;
    font-size: 30rpx;
    text-align: center;
}
/* 热搜榜区域样式 */
.hotContainer .title {
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1rpx solid #eee ;
}
.hotList {
    display: flex;
    flex-wrap: wrap;
}
.hotItem {
    width: 50%;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 26rpx;
}
.hotItem .order {
    margin: 0 10rpx;
}
.iconImg {
    width: 35rpx;
    height: 20rpx;
    margin-left: 10rpx;
}
/* 搜索内容展示 */
.searchContent {
    color: #d43c33;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 24rpx;
    border-bottom: 1px solid #d43c33;
}
.searchItem {
    display: flex;
    height: 80rpx;
    line-height: 80rpx;
}
.searchItem .content {
    flex: 1;
    margin-left: 20rpx;
    border-bottom: 1rpx solid #eee;
    font-size: 26rpx;
}
/* 搜索历史 */
.history {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    line-height: 50rpx;
    margin: 20rpx 0;

}
.history .title {
    height: 50rpx;
    font-size: 28rpx;
}
.history .historyItem {
    height: 50rpx;
    font-size: 26rpx;
    background: #ededed;
    border-radius: 20rpx;
    margin-left: 20rpx;
    margin-bottom: 20rpx;
    padding: 0 30rpx;
}
.history .delete {
    position: absolute;
    right: 0;
    bottom: 0;
}