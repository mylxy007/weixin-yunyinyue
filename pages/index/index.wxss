/* pages/index/index.wxss */
/* 轮播图区域样式 */
.banners {
    width: 100%;
    height: 300rpx;
}

.banners image {
    width: 100%;
    height: 100%;
}

/* 五个图标导航区域样式 */
.navContainer {
    display: flex;
}

.navItem {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.navItem .iconfont {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    line-height: 100rpx;
    background: rgb(240, 19, 19);
    font-size: 50rpx;
    color: #fff;
    margin: 20rpx 0;
    text-align: center;
}

.navItem text {
    font-size: 26rpx;
}

/* 推荐歌曲区域样式 */
.recommendContainer {
    padding: 20rpx;
}

/* 推荐内容区域样式 */
.recommedScroll {
    display: flex;
    height: 300rpx;

}

.scrollItem {
    width: 200rpx;
    margin-right: 20rpx;
}

.scrollItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.scrollItem text {
    font-size: 26rpx;
    /* 单文本溢出隐藏 省略号代替 */
    /* display: block;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden; */

    /* 多行文本溢出 省略号代替*/
    display: -webkit-box;
    text-overflow: ellipsis;
    overflow: hidden;
    /*设置对齐模式 */
    -webkit-box-orient: vertical;
    /* 设置多行行数 */
    -webkit-line-clamp: 2;
}

/* 排行榜 */
.topList {
    padding: 20rpx;
}

.topListSwiper {
    height: 400rpx;
}

.swiperItem {
    width: 96%;
    background: #fbfbfb;
}

.swiperItem .title {
    font-size: 30rpx;
    line-height: 80rpx;
}

.musicItem {
    display: flex;
    margin-bottom: 20rpx;
}

.musicItem image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 6rpx;
}

.musicItem .count {
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}

.musicItem .musicName {
    height: 100rpx;
    line-height: 100rpx;
    max-width: 400rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}